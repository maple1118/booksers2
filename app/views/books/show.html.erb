<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
<div class="container px5 px-sm-0">
  <div class="row">

    <%= render 'users/info', user: @user, book: @book %>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <th>
                <% if @book.user.profile_image.present? %>
                <%= image_tag attachment_url(@book.user, :profile_image, :fill, 150, 150, format: "jpg") %>
                <% else %>
                <%= image_tag('no_image.jpg') %>
                <% end %>
                  <p><%= link_to @user.name, user_path(current_user.id) %></p>
              </th>
              <th><%= link_to @book.title, book_path(@book) %></th>
              <th><%= @book.body %></th>
              <% if current_user.id == @book.user.id %>
                <th><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %></th>
                <th><%= link_to "Destroy", book_path(@book.id),method: :delete,data: { confirm: '本当に削除しますか？'}, class: "btn btn-sm btn-danger" %></th>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
  </div>
</div>

<footer>
  <div class="container mt-5">
    <div class="row">
      <div class="mx-auto">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>