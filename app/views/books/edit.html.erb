    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  <% end %>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing Book</h2>
      <%= form_with model:@book, local:true do |f| %>
      <div class="form-group">
        <label for>Title</label>
        <div><%= f.text_field :title, class: "form-control book_title" %></div>
      </div>
      <div class="form-group">
        <label for>Opinion</label>
        <div><%= f.text_area :body, class: "form-control book_body" %></div>
      </div>
      <div class="form-group">
        <%= f.submit 'Update Book', class: "btn btn-success" %>
      </div>

      <% end %>

      <span><%= link_to "Show", book_path(@book) %></span>
      <span>|</span>
      <span><%= link_to "Back", books_path %></span>


    </div>
  </div>
