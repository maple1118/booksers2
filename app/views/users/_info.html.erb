
    <div class="col-md-3">
        <h2>User info</h2>
      <% if user.profile_image.present? %>
        <%= image_tag attachment_url(user, :profile_image, :fill, 150, 150, format: "jpg") %>
      <% else %>
        <%= image_tag('no_image.jpg') %>
      <% end %>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th class="profile-name"><%= user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= user.introduction %></th><br/>
            </tr>
          </tbody>
        </table>
        <div class="row">
        <%= link_to "", edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
        </div>

      <h2 class="mt-3">New book</h2>
      <%= form_with model:book, local:true do |f| %>
      <div class="form-group">
        <labrl>Title</labrl>
        <div><%= f.text_field :title, class: "form-control book_title" %></div>
      </div>
      <div class="form-group">
        <labrl>Opinion</labrl>
        <div><%= f.text_area :body, class: "form-control book_body" %></div>
      </div>
      <div class="form-group">
        <%= f.submit 'Create Book', class: "btn btn-success" %>
      </div>
      <% end %>
    </div>