<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<div class="container px5 px-sm-0">
  <div class="row">
    <%= render 'info', user: @user, book: @book %>
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td>
                  <% if @user.profile_image.present? %>
                  <%= image_tag attachment_url(@user, :profile_image, :fill, 150, 150, format: "jpg") %>
                  <% else %>
                  <%= image_tag('no_image.jpg') %>
                  <% end %>
                </td>
                <td><%= link_to book.title, book_path(book.id) %></tb>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
  </div>
</div

