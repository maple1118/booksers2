        <%= form_with model:@user, url: user_path(current_user.id), method: :patch, local:true do |f| %>
          <div class="form-group">
            <label for="inputName">Name</label>
            <div><%= f.text_field :name, autofocus: true, id:"inputName", class: "form-control name" %></div>
          </div>

          <div class="form-group">
            <label for>Image</label>
            <div><%= f.attachment_field :profile_image %></div>
          </div>
          <div class="form-group">
          <label for>Intoroduction</label>
            <%= f.text_area :introduction, class: "form-control introduction" %>
          </div>
          <div class="form-group">
            <%= f.submit "Update User", class: "btn btn-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
