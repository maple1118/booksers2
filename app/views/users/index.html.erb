<div class="container px5 px-sm-0">
  <div class="row">

    <%= render 'info', user: @user, book: @book %>
      <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
        <table class='table'>
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
          <% @users.each do |user| %>
              <tr>
                <td>
                  <% if user.profile_image.present? %>
                  <%= image_tag attachment_url(user, :profile_image, :fill, 150, 150, format: "jpg") %>
                  <% else %>
                  <%= image_tag('no_image.jpg') %>
                  <% end %>
                </td>
                <td><%= user.name %></td>
                <td><%= link_to 'Show', user_path(user.id) %></td>
              </tr>
              <% end %>
          </tbody>
        </table>
      </div>
  </div>
</div

<footer>
  <div class="container mt-5">
    <div class="row">
      <div class="mx-auto">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>